<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.umich.mbowyer.arduinobluetoothcontroller.JoyStickActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight=".2"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/XTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:text="X : "
            android:textColor="#444444"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/YTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:text="Y : "
            android:textColor="#444444"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/AngleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:text="Angle : "
            android:textColor="#444444"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight=".2"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/DistanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".22"
            android:text="Distance :"
            android:textColor="#444444"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/DirectionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".66"
            android:text="Direction :"
            android:textColor="#444444"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight=".8"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/layout_joystick"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:background="@drawable/image_button_bg"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignEnd="@+id/linearLayout2"
            android:layout_margin="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp">
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_alignParentEnd="true">

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/BUTTON1"
                android:text="STOP"
                android:layout_alignTop="@+id/layout_joystick"
                android:layout_toEndOf="@+id/layout_joystick"
                android:elevation="0dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/BUTTON2"
                android:text="Turn On Lights"
                android:layout_alignTop="@+id/layout_joystick"
                android:layout_toEndOf="@+id/layout_joystick"
                android:elevation="0dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/BUTTON3"
                android:text="Honk Horn"
                android:layout_alignTop="@+id/layout_joystick"
                android:layout_toEndOf="@+id/layout_joystick"
                android:elevation="0dp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
